# Server
PORT=8080
ENV=development
API_VERSION=v1

# Database
DATABASE_URL=postgres://xuangong:xuangong@localhost:5432/xuangong_db?sslmode=disable
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5
DB_MAX_LIFETIME_MINUTES=5

# JWT
JWT_SECRET=dev-secret-key-not-for-production-use-only
JWT_EXPIRY_HOURS=24
REFRESH_TOKEN_EXPIRY_DAYS=7

# CORS - Allow all localhost ports for development
# Using "localhost:" prefix to allow any port (handles random Flutter web ports)
ALLOWED_ORIGINS=localhost:
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
ALLOWED_HEADERS=Content-Type,Authorization,Accept,X-Requested-With,Origin

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION_MINUTES=1

# File Upload
MAX_UPLOAD_SIZE_MB=500
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
